/*The Box class takes user input, translates it using methods from the Utility and Translator classes, and then displays it
 * 
 * @authors Nikhil Maserang and Julius Gomez
 * @version 1.0
 * @since 2018-11-28
 */

import java.awt.event.*;
import java.awt.Font;
import java.awt.Color;
import javax.swing.*;

public class Box {
	public static void main(String[] args)
	  {
	    //makes a box
	    JFrame f=new JFrame("PigLatinTranslator");
        
	    
	    //makes a text field and sets its bounds
	    final JTextArea inputtf = new JTextArea("");
	    inputtf.setBounds(45, 25, 1265, 275);
	    inputtf.setFont(new Font("Serif", 3, 15));
	    
	    //makes an output text field and sets its bounds
	    final JTextArea outputtf = new JTextArea("");
	    outputtf.setBounds(45, 400, 1265, 275);
	    outputtf.setEditable(false);
	    outputtf.setFont(new Font("Serif", 3, 15));
	    
	    //sets text field to hold instructions
	    final JTextArea instructionstf = new JTextArea("Enter text to be translated. Do Not Exceed This Length On One Line.------------------------------------------|");
	    instructionstf.setBounds(45, 5, 1265, 275);
	    instructionstf.setEditable(false);
	    instructionstf.setFont(new Font("SansSerif", 3, 15));
	    
	    //extra balancing text field
	    final JTextArea extratf = new JTextArea("");
	    extratf.setBounds(45, 417, 1265, 275);
	    extratf.setEditable(false);
	    extratf.setFont(new Font("Serif", 3, 15));
	    
	    //makes a button and sets its bounds
	    JButton b = new JButton("Translate");
	    b.setBounds(180, 327, 95, 45);
	    
	    JButton c = new JButton("Reset");
	    c.setBounds(1080, 327, 95, 45);
	    
	    //sets action to occur when the button is clicked
	    b.addActionListener(new ActionListener()
	     {
	    	//pig latin translation
	      public void actionPerformed(ActionEvent e)
	        {
	    		outputtf.setText( Utility.totalTranslate( inputtf.getText()) );
		        instructionstf.setVisible(false);
		        extratf.setVisible(false);
	        }
	     }
	    );
	    
	  //sets action to occur when the button is clicked
	    c.addActionListener(new ActionListener()
	     {
	    	//pig latin translation
	      public void actionPerformed(ActionEvent e)
	        {
	    	  inputtf.setText("");
	          outputtf.setText("");
	          instructionstf.setVisible(true);
	          extratf.setVisible(true);
	          instructionstf.setText("Enter text to be translated. Do Not Exceed This Length On One Line.------------------------------------------|");
	        }
	     }
	    );
	    
	    f.getContentPane().setBackground( new Color(153, 102, 255) );
	    
	    //set background and text box colors
	    inputtf.setBackground       ( new Color(102, 102, 155) );
	    instructionstf.setBackground( new Color(102, 102, 155) );
	    outputtf.setBackground      ( new Color(102, 102, 155) );
	    extratf.setBackground       ( new Color(102, 102, 155) );
	    
	    //set text color
	    Color textColor = new Color(0, 204, 102);
	    inputtf.setForeground       ( textColor);
	    instructionstf.setForeground( textColor);
	    outputtf.setForeground      ( textColor);
	    extratf.setForeground       ( textColor);

	    
	    f.add(b);
	    f.add(c);
	    f.add(inputtf);
	    f.add(outputtf);
	    f.add(instructionstf);
	    f.add(extratf);
	    f.setSize(1367, 735);
	    f.setLayout(null);
	    f.setVisible(true);
	  }
}
